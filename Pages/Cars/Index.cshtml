@page
@model KomisSamochodowy.Pages.Cars.IndexModel
@{
}

<div class='container p-3'>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista aut</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page='create' class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Dodaj samochód
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Marka
                </th>
                <th>
                    Model
                </th>
                <th>
                    Rok produkcji
                </th>
                <th>
                    Przebieg
                </th>
                <th>
                    Dostępność
                </th>
                <th>
                    Cena
                </th>
                <th>
                    Opis
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var  obj in Model.Cars) 
            {
            <tr>
                <td width='14%'>@obj.mark</td>
                <td width='14%'>@obj.model</td>
                <td width='14%'>@obj.year</td>
                <td width='14%'>@obj.odometer km</td>
                <td width='14%'>@obj.availability</td>
                <td width='14%'>@obj.value zł</td>
                <td width='14%'>@obj.description</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.carID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="Delete" asp-route-id="@obj.carID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

