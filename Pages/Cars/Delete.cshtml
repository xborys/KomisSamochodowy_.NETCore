@page
@model KomisSamochodowy.Pages.Cars.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="Car.carID" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Usuń samochód</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Marka</label>
            <input asp-for='Car.mark' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Model</label>
            <input asp-for='Car.model' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Rok produkcji</label>
            <input asp-for='Car.year' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Przebieg</label>
            <input asp-for='Car.odometer' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <select asp-for='Car.availability' disabled class="form-control">
                <option>true</option>
                <option>false</option>
            </select>
            <input type="checkbox" asp-for='Car.availability' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Cena</label>
            <input asp-for='Car.value' disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label>Opis</label>
            <input asp-for='Car.description' disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Usuń</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Powrót</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

