@page
@model KomisSamochodowy.Pages.Clients.IndexModel
@{

}
<div class='container p-3'>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista klientów wraz z zarezerwowanymi przez nich aut</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page='create' class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp; Dodaj klienta
            </a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Imie
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Ulica
                </th>
                <th>
                    Miasto
                </th>
                <th>
                    Kod pocztowy
                </th>
                <th>
                    Nr. telefonu
                </th>
                <th>
                    FK_carID
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var  obj in Model.Clients) 
            {
            <tr>
                <td width='20%'>@obj.Name</td>
                <td width='20%'>@obj.LastName</td>
                <td width='20%'>@obj.Street</td>
                <td width='20%'>@obj.City</td>
                <td width='20%'>@obj.PostCode</td>
                <td width='20%'>@obj.PhoneNumber</td>
                <td width='20%'>@obj.FK_carID</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.clientID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-page="Delete" asp-route-id="@obj.clientID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
